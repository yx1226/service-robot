<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_tour"
        android:layout_width="734dp"
        android:layout_height="418dp"
        android:background="@drawable/bg0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="498dp"
            android:layout_height="252dp"
            android:layout_marginStart="131dp"
            android:layout_marginTop="73dp"
            android:layout_marginEnd="131dp"
            android:layout_marginBottom="23dp"
            android:src="@drawable/floor_plan"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/checkpoint1"
            android:layout_width="63dp"
            android:layout_height="56dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/btn_cp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/checkpoint"
            android:layout_width="63dp"
            android:layout_height="56dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="250dp"
            android:src="@drawable/btn_cp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/checkpoint2"
            android:layout_width="63dp"
            android:layout_height="56dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/btn_cp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:background="#B9090808"
            android:text="TextView"
            android:textColor="#F2FCFBFB"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/btn_endtour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="76dp"
            android:background="#C6F44336"
            android:text="END TOUR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_meet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg0">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="72dp"
            android:layout_height="39dp"
            android:layout_marginStart="600dp"
            android:layout_marginTop="350dp"
            android:background="#B0D81B60"
            android:text="HOME"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginTop="360dp"
            android:background="#C60A0A0A"
            android:text="TextView"
            android:textColor="#FAF9F9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_takePhoto"
            android:layout_width="178dp"
            android:layout_height="51dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="190dp"
            android:background="#53B7E7"
            android:text="Take your photo"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="250dp"
            android:background="#B3FB8C00"
            android:text="RESET"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_submit"
            app:layout_constraintTop_toBottomOf="@+id/editText_phone" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="104dp"
            android:layout_height="47dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="110dp"
            android:background="#D597DF4B"
            android:text="SUBMIT"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_reset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_takePhoto" />

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="400dp"
            android:layout_marginTop="116dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:text="PLEASE ENTER YOUR PERSONAL INFORMATION"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="400dp"
            android:layout_marginTop="200dp"
            android:ems="10"
            android:inputType="phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_lecturer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_staff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg0"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible">

        <Button
            android:id="@+id/btn_home2"
            android:layout_width="72dp"
            android:layout_height="39dp"
            android:layout_marginStart="600dp"
            android:layout_marginTop="368dp"
            android:background="#B0D81B60"
            android:text="HOME"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:id="@+id/scrollView_staff"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/textView_staff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linerLayout_staff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dean"
                    android:layout_width="394dp"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    tools:srcCompat="@drawable/admin" />

                <ImageView
                    android:id="@+id/deputy_dean"
                    android:layout_width="378dp"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    tools:srcCompat="@drawable/akademik" />

                <ImageView
                    android:layout_width="525dp"
                    android:layout_height="365dp"
                    tools:srcCompat="@drawable/seis" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#C40C0C0C"
            android:text="This is our FTSM Family"
            android:textColor="#FAF7F7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView_staff" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_programme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg0">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="13dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView_programme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="458dp"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@drawable/cs" />

                <ImageView
                    android:layout_width="506dp"
                    android:layout_height="match_parent"
                    tools:srcCompat="@drawable/it" />

                <ImageView
                    android:layout_width="554dp"
                    android:layout_height="340dp"
                    tools:srcCompat="@drawable/semm" />

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView_programme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#C40C0C0C"
            android:text="TextView"
            android:textColor="#FAF7F7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg0">

        <Button
            android:id="@+id/btn_lecturer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="107dp"
            android:layout_marginBottom="34dp"
            android:background="#A87CB342"
            android:text="LECTURER"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_admission"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_staff"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_admission"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="108dp"
            android:layout_marginBottom="25dp"
            android:background="#A843A047"
            android:text="ADMISSION"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_office"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_programme"
            app:layout_constraintTop_toBottomOf="@+id/btn_lecturer" />

        <Button
            android:id="@+id/btn_office"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="108dp"
            android:layout_marginBottom="88dp"
            android:background="#A800897B"
            android:text="OFFICE"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_department"
            app:layout_constraintTop_toBottomOf="@+id/btn_admission" />

        <Button
            android:id="@+id/btn_department"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="90dp"
            android:background="#A89C27B0"
            android:text="DEPARTMENT"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_office"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_programme" />

        <Button
            android:id="@+id/btn_programme"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="27dp"
            android:background="#A8C843DF"
            android:text="PROGRAMME"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_department"
            app:layout_constraintEnd_toStartOf="@+id/btn_admission"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_staff" />

        <Button
            android:id="@+id/btn_staff"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="98dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="32dp"
            android:background="#A8DF49BE"
            android:text="STAFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_programme"
            app:layout_constraintEnd_toStartOf="@+id/btn_lecturer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_home3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="550dp"
            android:layout_marginTop="340dp"
            android:layout_weight="1"
            android:background="#E0467E"
            android:text="HOME"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_knowmore"
            android:layout_width="110dp"
            android:layout_height="51dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="340dp"
            android:layout_weight="1"
            android:background="#FB8C00"
            android:text="KNOW MORE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_meet"
            android:layout_width="263dp"
            android:layout_height="0dp"
            android:layout_marginBottom="25dp"
            android:background="#EDF8F5F6"
            android:fontFamily="@font/yatra_one"
            android:text="MEET SOMEONE"
            android:textColor="#921818"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_tour" />

        <Button
            android:id="@+id/btn_tour"
            android:layout_width="263dp"
            android:layout_height="0dp"
            android:layout_marginTop="116dp"
            android:layout_marginBottom="27dp"
            android:background="#EDF4F9FA"
            android:fontFamily="@font/yatra_one"
            android:text="TOUR"
            android:textColor="#0A1558"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_meet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_info"
            android:layout_width="263dp"
            android:layout_height="0dp"
            android:layout_marginBottom="46dp"
            android:background="#F0FFFFFB"
            android:fontFamily="@font/yatra_one"
            android:text="KNOW ABOUT US"
            android:textColor="#63540B"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/txtView_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_meet" />

        <TextView
            android:id="@+id/txtView_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:background="#AE0A0707"
            android:text="Welcome to dean office of FTSM"
            android:textColor="#FAFCFAFA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>